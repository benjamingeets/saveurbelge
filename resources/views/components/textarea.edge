@set('oldValue', flashMessages.get($props.name) || $props.value || '')
@set('type',$props.type || 'text')
@set('error', flashMessages.get(`errors.${$props.name}`) || '')
<label for="{{$props.name}}" {{$props.serialize({ class: classes })}}>
    {{$props.text}} 
    <textarea name="{{$props.name}}" id="{{$props.name}}" rows="4">{{oldValue ? oldValue : ''}}</textarea>
