<a href="#" id="city-popup" class="fixed z-50 items-center hidden w-full p-4 bg-white md:hidden bottom-16">
    <figure class="w-20 h-20 overflow-hidden rounded-full">
        <img id="popup-image" class="object-cover w-full h-full" src="https://via.placeholder.com/250x150" alt="">
    </figure>
    <div id="popup-name" class="ml-4">
        <h2 class="text-2xl">Nom</h2>
        <p class="text-primary-dark">Ville</p>
    </div>
</a>

<div class="fixed bottom-0 z-50 w-full bg-white rounded-md md:w-auto md:top-5 md:left-5 md:bottom-auto " x-data="{ settings: false }">
    <div class="flex items-center gap-3 p-2">
