<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}} | Dashboard</title>
  <link rel="stylesheet" href="https://unpkg.com/unpoly@2.5.0/unpoly.min.css">
  @entryPointStyles('app')
  @entryPointScripts('app')
</head>

<body class="h-screen flex flex-col">
  @!navbar()
  <div class="flex h-full">
    @!dashboard.sidebar({selectedShop,shops,hideAside:hideAside? true:false})
    <div class="bg-grey-light w-full md:px-9 md:py-7 flex xl:flex-row flex-col items-start gap-7 overflow-y-scroll h-full" >
      @!section('body')
    </div>
  </div>
</body>
</html>
